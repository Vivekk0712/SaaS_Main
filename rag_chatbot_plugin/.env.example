# Server
PORT=4000
NODE_ENV=development

# JWT (from ERP)
JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----
JWT_SECRET=your_jwt_secret_for_testing

# ERP Integration
ERP_API_URL=https://erp.example.com

# Object Store (MinIO or GCS)
OBJECT_STORE_TYPE=minio
OBJECT_STORE_URL=http://localhost:9000
OBJECT_STORE_ACCESS_KEY=minioadmin
OBJECT_STORE_SECRET_KEY=minioadmin
OBJECT_STORE_BUCKET=erp-pdfs

# Embedding Service
EMBEDDING_URL=http://localhost:8000/embed
EMBEDDING_BATCH_SIZE=64
EMBEDDING_DIM=384
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=erp_notes

# Gemini LLM
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=erp_rag

# Redis (optional caching)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Processing
CHUNK_SIZE=400
CHUNK_OVERLAP=80
TOP_K_RESULTS=6
