# Server Configuration
PORT=5003
NODE_ENV=development
LOG_LEVEL=info
ENVIRONMENT=development

# ERP Authentication (set DISABLE_AUTH=true for development)
ERP_JWT_SECRET=your_jwt_secret_here
ERP_JWT_ISSUER=https://erp.example.com
ERP_JWT_AUDIENCE=erp_mcp
DISABLE_AUTH=true

# MySQL Database (Read-Only recommended)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=sas

# Gemini AI Configuration (REQUIRED - Get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_TOKENS=1000

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500

# Audit Database (Optional - can use same as main DB)
AUDIT_DB_HOST=localhost
AUDIT_DB_PORT=3306
AUDIT_DB_USER=erp_audit
AUDIT_DB_PASSWORD=your_audit_password_here
AUDIT_DB_NAME=erp_audit

# Security
ALLOWED_TABLES=students,teachers,timetables,attendance,subjects,classes,fees,exams
MAX_ROWS_RETURNED=100

# CORS
FRONTEND_URL=http://localhost:3000
